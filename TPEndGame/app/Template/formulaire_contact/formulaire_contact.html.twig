{% extends "base.html.twig" %}

{% block title %}{{ titre }}{% endblock %}

{% block content %}
    <!DOCTYPE html>
    <html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>Formulaire de contact</title>
        <link rel="stylesheet" href="/css/formulaireStyle.css">
    </head>
    <body>

    <h2>Contactez-nous</h2>

    {% if confirmation %}
        <p style="color: green; text-align: center;">{{ confirmation }}</p>
    {% endif %}
    <form method="post" action="/">
        <label for="nom">Nom :</label><br>
        <input type="text" id="nom" name="nom" required><br><br>

        <label for="email">Email :</label><br>
        <input type="email" id="email" name="email" required><br><br>
        <label for="sujet">Sujet :</label><br>
        <input type="text" id="sujet" name="sujet"><br><br>

        <label for="message">Message :</label><br>
        <textarea id="message" name="message" rows="5" required></textarea><br><br>

        <button type="submit">Envoyer</button>
    </form>

    <div id="confirmationMessage" style="text-align:center; margin-top: 20px;"></div>

    <script src="/scripts/formulaireScript.js"></script>

    </body>
    </html>
{% endblock %}
